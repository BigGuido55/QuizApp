@model OnlineQuiz.Models.QuizViewModels.SolvingQuestionModel

@{
    ViewData["Title"] = "SolveQuestions";
}

<h2 style="font-weight: bold">Solve Questions</h2>

<h4>Question number @Model.QuestionNumber</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SolveQuestions">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="SampleQuizId" class="control-label"></label>
                <input asp-for="SampleQuizId" class="form-control" value="@Model.SampleQuizId"/>
                <span asp-validation-for="SampleQuizId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="SolvingQuizId" class="control-label"></label>
                <input asp-for="SolvingQuizId" class="form-control" value="@Model.SolvingQuizId"/>
                <span asp-validation-for="SolvingQuizId" class="text-danger"></span>
            </div>
            <h1>@Model.QuestionText</h1>
            <div class="form-group">
                <label asp-for="UserAnswer" class="control-label"></label>
                <select name="UserAnswer" class="form-control">
                    <option value="@Model.Answers[0]">@Model.Answers[0]</option>
                    <option value="@Model.Answers[1]">@Model.Answers[1]</option>
                    <option value="@Model.Answers[2]">@Model.Answers[2]</option>
                    <option value="@Model.Answers[3]">@Model.Answers[3]</option>
                </select>
                <span asp-validation-for="UserAnswer" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="QuestionNumber" class="control-label"></label>
                <input asp-for="QuestionNumber" class="form-control" value="@Model.QuestionNumber"/>
                <span asp-validation-for="QuestionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

